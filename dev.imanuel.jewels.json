{
  "id": "dev.imanuel.jewels",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.15",
  "sdk": "org.kde.Sdk",
  "command": "jewels",
  "tags": [
    "nightly"
  ],
  "finish-args": [
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home"
  ],
  "separate-locales": false,
  "modules": [
    {
      "name": "jewels",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": ".",
          "skip": [
            ".git"
          ]
        }
      ]
    }
  ]
}

